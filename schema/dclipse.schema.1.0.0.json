{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/dclipse-objects-actions.v1.json",
  "title": "Dclipse Objects/Actions Configuration",
  "type": "object",
  "required": ["global", "behavior", "objects", "actions"],
  "additionalProperties": false,
  "properties": {
    "title": { "type": "string" },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "clipse_version": { "type": "string" },

    "shared_defs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "vars": {
          "type": "object",
          "additionalProperties": { "type": ["string", "number", "boolean"] }
        },
        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionDefNoId" }
        },
        "actions": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/actionDefNoId" }
        },
        "objects": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/objectDefNoId" }
        }
      },
      "default": {}
    },

    "global": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        }
      }
    },

    "behavior": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allow_abbrev": { "type": "boolean", "default": false },
        "stop_at_positional": { "type": "boolean", "default": true },
        "env_prefix": { "type": "string", "default": "" },
        "completion": {
          "type": "array",
          "items": { "enum": ["bash", "zsh", "fish", "powershell"] },
          "uniqueItems": true,
          "default": []
        },
        "color": { "enum": ["auto", "always", "never"], "default": "auto" },
        "pager": { "type": "boolean", "default": false },
        "telemetry": { "type": "boolean", "default": false },
        "exit_codes": {
          "type": "object",
          "additionalProperties": { "type": "integer" },
          "default": { "ok": 0, "usage": 2, "runtime_error": 1 }
        },
        "io": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "stdin": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "accepts": { "type": "boolean", "default": false },
                "when": {
                  "type": "array",
                  "items": { "type": "string" },
                  "default": []
                }
              }
            },
            "stdout": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "default": {
                  "enum": ["text", "table", "json", "yaml", "ndjson", "binary"],
                  "default": "text"
                }
              }
            },
            "stderr": {
              "type": "object",
              "additionalProperties": false,
              "properties": { "diagnostics": { "type": "boolean", "default": true } }
            },
            "pipes_and_redirection": { "type": "boolean", "default": true }
          },
          "default": { "pipes_and_redirection": true }
        }
      }
    },

    "rendering": { "type": "object", "additionalProperties": true },

    "objects": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/objectUseNoId" },
      "default": {}
    },

    "actions": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/actionUseNoId" },
      "default": {}
    }
  },

  "$defs": {
    "envDef": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["var"],
          "properties": {
            "var": { "type": "string", "pattern": "^[A-Z][A-Z0-9_]*$" },
            "override_cli": { "type": "boolean", "default": false },
            "update": { "type": "boolean", "default": false }
          }
        }
      ]
    },

    "typeInline": {
      "type": "object",
      "additionalProperties": true,
      "required": ["kind"],
      "properties": {
        "kind": {
          "enum": [
            "any","boolean","string","integer","number","decimal",
            "enum","list","object","date","datetime","url","json",
            "path","file","dir"
          ]
        },
        "values": {
          "type": "array",
          "items": { "type": ["string","number","integer","boolean"] }
        },
        "of": { "oneOf": [ { "type": "string" }, { "$ref": "#/$defs/typeInline" } ] },
        "format": { "type": "string" },
        "constraints": { "type": "object", "additionalProperties": true }
      }
    },

    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "requires": { "type": "array", "items": { "type": "string" }, "default": [] },
        "conflicts": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "items": { "type": "string" }
          },
          "default": []
        },
        "exactly_one_of": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "items": { "type": "string" }
          },
          "default": []
        },
        "at_least_one_of": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "items": { "type": "string" }
          },
          "default": []
        },
        "custom": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["message","predicate"],
            "properties": {
              "message": { "type": "string" },
              "predicate": { "type": "string" }
            },
            "additionalProperties": false
          },
          "default": []
        }
      }
    },

    "ioHints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stdin": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "accepts": { "type": "boolean" },
            "when": { "type": "array", "items": { "type": "string" } }
          }
        },
        "stdout": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "default": {
              "enum": ["text","table","json","yaml","ndjson","binary"]
            }
          }
        },
        "stderr": {
          "type": "object",
          "additionalProperties": false,
          "properties": { "diagnostics": { "type": "boolean" } }
        }
      }
    },

    "argCommonNoId": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "required": { "type": "boolean", "default": false },
        "hidden": { "type": "boolean", "default": false },
        "deprecated_since": { "type": "string" },
        "env": { "$ref": "#/$defs/envDef" },
        "default": {},
        "type": {
          "oneOf": [ { "type": "string" }, { "$ref": "#/$defs/typeInline" } ]
        },
        "arity": {
          "type": "string",
          "pattern": "^(\\*|\\d+|\\d+\\.\\.\\d+|\\d+\\.\\.\\*|0\\.\\.\\*|0\\.\\.1)$",
          "default": "1",
          "examples": ["1","0..1","1..*","*","2..4"]
        },
        "validator": { "type": "string" },
        "value_name": { "type": "string" }
      }
    },

    "optionDefNoId": {
      "type": "object",
      "additionalProperties": false,
      "required": ["names","kind","description_short"],
      "properties": {
        "names": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "kind": { "enum": ["flag","option"] },
        "takes_value": { "type": "boolean" },
        "type": {
          "oneOf": [ { "type": "string" }, { "$ref": "#/$defs/typeInline" } ]
        },
        "value_name": { "type": "string" },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "default": {},
        "env": { "$ref": "#/$defs/envDef" }
      }
    },

    "optionUseNoId": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$ref": { "type": "string", "format": "uri-reference" },
        "names": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "kind": { "enum": ["flag","option"] },
        "takes_value": { "type": "boolean" },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "required": { "type": "boolean", "default": false },
        "hidden": { "type": "boolean", "default": false },
        "deprecated_since": { "type": "string" },
        "env": { "$ref": "#/$defs/envDef" },
        "default": {},
        "type": { "oneOf": [ { "type": "string" }, { "$ref": "#/$defs/typeInline" } ] },
        "arity": {
          "type": "string",
          "pattern": "^(\\*|\\d+|\\d+\\.\\.\\d+|\\d+\\.\\.\\*|0\\.\\.\\*|0\\.\\.1)$",
          "default": "1",
          "examples": ["1","0..1","1..*","*","2..4"]
        },
        "validator": { "type": "string" },
        "value_name": { "type": "string" }
      },
      "allOf": [
        {
          "if": { "required": ["$ref"] },
          "then": {
            "anyOf": [
              { "required": ["$ref"] },
              { "allOf": [ { "$ref": "#/$defs/argCommonNoId" } ] }
            ]
          },
          "else": {
            "allOf": [ { "$ref": "#/$defs/argCommonNoId" } ],
            "required": ["names","kind"],
            "oneOf": [
              { "properties": { "kind": { "const": "flag"  }, "takes_value": { "const": false } } },
              { "properties": { "kind": { "const": "option"}, "takes_value": { "const": true  } } }
            ]
          }
        }
      ]
    },

    "positionalUseNoId": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$ref": { "type": "string", "format": "uri-reference" },
        "name": { "type": "string" },
        "kind": { "const": "positional" },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "required": { "type": "boolean", "default": false },
        "hidden": { "type": "boolean", "default": false },
        "deprecated_since": { "type": "string" },
        "env": { "$ref": "#/$defs/envDef" },
        "default": {},
        "type": { "oneOf": [ { "type": "string" }, { "$ref": "#/$defs/typeInline" } ] },
        "arity": {
          "type": "string",
          "pattern": "^(\\*|\\d+|\\d+\\.\\.\\d+|\\d+\\.\\.\\*|0\\.\\.\\*|0\\.\\.1)$",
          "default": "1",
          "examples": ["1","0..1","1..*","*","2..4"]
        },
        "validator": { "type": "string" },
        "value_name": { "type": "string" }
      },
      "allOf": [
        {
          "if": { "required": ["$ref"] },
          "then": {
            "oneOf": [
              { "required": ["$ref"] },
              { "allOf": [ { "$ref": "#/$defs/argCommonNoId" } ] }
            ]
          },
          "else": {
            "allOf": [ { "$ref": "#/$defs/argCommonNoId" } ],
            "required": ["name","kind"]
          }
        }
      ]
    },

    "actionDefNoId": {
      "type": "object",
      "additionalProperties": false,
      "required": ["names","description_short"],
      "properties": {
        "names": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        },
        "positionals": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
          "default": {}
        },
        "constraints": { "$ref": "#/$defs/constraints" },
        "io": { "$ref": "#/$defs/ioHints" },
        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "uniqueItems": true
        }
      }
    },

    "actionRefOrOverrideNoId": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$ref": { "type": "string", "format": "uri-reference" },
        "names": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        },
        "positionals": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
          "default": {}
        },
        "constraints": { "$ref": "#/$defs/constraints" },
        "io": { "$ref": "#/$defs/ioHints" },
        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "uniqueItems": true
        }
      }
    },

    "actionUseNoId": {
      "type": "object",
      "additionalProperties": false,
      "required": ["names","description_short"],
      "properties": {
        "$ref": { "type": "string", "format": "uri-reference" },
        "names": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },

        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        },
        "positionals": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
          "default": {}
        },
        "constraints": { "$ref": "#/$defs/constraints" },
        "io": { "$ref": "#/$defs/ioHints" },

        "objects": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "$ref": { "type": "string", "format": "uri-reference" },
              "names": {
                "type": "array",
                "items": { "type": "string" },
                "uniqueItems": true
              },
              "description_short": { "type": "string" },
              "description_long": { "type": "string" },
              "options": {
                "type": "object",
                "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
                "default": {}
              },
              "positionals": {
                "type": "object",
                "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
                "default": {}
              },
              "constraints": { "$ref": "#/$defs/constraints" },
              "io": { "$ref": "#/$defs/ioHints" },
              "examples": {
                "type": "array",
                "items": { "type": "string" },
                "default": [],
                "uniqueItems": true
              }
            }
          },
          "default": {}
        },

        "default_object": { "type": "string" },

        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "uniqueItems": true
        }
      }
    },

    "objectDefNoId": {
      "type": "object",
      "additionalProperties": false,
      "required": ["names","description_short"],
      "properties": {
        "names": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },
        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        },
        "positionals": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
          "default": {}
        },
        "constraints": { "$ref": "#/$defs/constraints" },
        "io": { "$ref": "#/$defs/ioHints" },

        "actions": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/actionRefOrOverrideNoId" },
          "default": {}
        },

        "default_action": { "type": "string" },

        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "uniqueItems": true
        }
      }
    },

    "objectUseNoId": {
      "type": "object",
      "additionalProperties": false,
      "required": ["names","description_short"],
      "properties": {
        "$ref": { "type": "string", "format": "uri-reference" },
        "names": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
        "description_short": { "type": "string" },
        "description_long": { "type": "string" },

        "options": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/optionUseNoId" },
          "default": {}
        },
        "positionals": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/positionalUseNoId" },
          "default": {}
        },
        "constraints": { "$ref": "#/$defs/constraints" },
        "io": { "$ref": "#/$defs/ioHints" },

        "actions": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/actionRefOrOverrideNoId" },
          "default": {}
        },

        "default_action": { "type": "string" },

        "examples": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "uniqueItems": true
        }
      }
    }
  }
}
